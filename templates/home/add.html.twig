{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Nouveau contact{% endblock %}

{% block pageTitle %}
    Ajouter un Nouveau contact
    <a href="{{ path("home") }}" title="Liste des contacts" class="btn btn-primary pull-right"><i class="fa fa-file-text"></i> Afficher toutes la liste</a>
    <hr class="line">
{% endblock %}

{% block body %}
    <div class="content">
        {{ form_start(form) }}

        <div class="row">
            <div class="col-md-12">
                {{ form_widget(form.image) }}
                <div class="col-7" style="text-align: center;margin-bottom: 20px">
                    {% set img_url = absolute_url(asset('img/avatar.png')) %}
                    {% if c is defined and c is not null and c.photo is defined and c.photo is not null %}
                        {% set img_url = absolute_url(asset('img/' ~ c.photo)) %}
                    {% endif %}
                    <label title="{{ "CLIQUER POUR MODIFIER LA PHOTO DE L'ETUDIANT" }}" style="cursor: pointer;" for="adresse_image">
                        <img id="previsualisation" style="width:150px;height:150px;border-radius:100%" src="{{ img_url }}" alt="">
                    </label>
                </div>
            </div>
            <div class="col-md-12">
                {{ form_row(form.company) }}
            </div>
            <div class="col-md-8">
                {{ form_row(form.contactName) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.sexe) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(form.telephone) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(form.telephone2) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(form.email) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(form.villeResidence) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(form.nationalite) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(form.boitePostale) }}
            </div>
            <div class="col-md-12">
                {{ form_row(form.details) }}
                {{ form_rest(form) }}
            </div>
            
            <div class="col-lg-12 text-right">
                <button class="btn btn-primary" type="submit">Enregistrer <i class="fa fa-save"></i></button>
            </div>
            
        </div>
    {{ form_end(form) }}
    </div>
{% endblock %}