{% extends 'base.html.twig' %}

{% block title %}Carnet d'adresse{% endblock %}

{% block pageTitle %}
    Liste des contacts
    <hr class="line">
{% endblock %}

{% block body %}
    <div class="content">
        <div>
            <a style="margin-bottom: 20px;" href="{{ path("new") }}" class="btn btn-primary pull-right"><i class="fa fa-phone"> Nouveau contact</i></a>
        </div>
        {% if contacts is not empty %}
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">#</th>
                        <th>Nom et Prenom</th>
                        <th>Téléphone</th>
                        <th>E-mail</th>
                        <th>Entreprise</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for c in contacts %}
                        {% set i = i is defined ? i + 1 : 1 %}
                        <tr>
                            <td class="text-center">{{ i }}</td>
                            <td>{{ c.contactName }}</td>
                            <td>{{ c.telephone }}</td>
                            <td>{{ c.email }}</td>
                            <td>{{ c.company }}</td>
                            <td>
                                <a href="{{ path("details", {"id": c.id}) }}" title="Plus de détails" class="btn btn-info btn-xs"><i class="fa fa-eye"></i></a>
                                <a href="{{ path("edit", {"id": c.id}) }}" class="btn btn-warning btn-xs" title="Modifier les informations"><i class="fa fa-pencil"></i></a>
                                <a href="{{ path("delete", {"id": c.id}) }}" class="btn btn-danger btn-xs" title="Supprimer ce contact"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% if contacts|length > 20 %}
                <div>
                    <a style="margin-bottom: 20px;" href="{{ path("new") }}" class="btn btn-primary pull-right"><i class="fa fa-phone"> Nouveau contact</i></a>
                </div>
            {% endif %}
        {% else %}
            <h1 style="text-align: center;color:rgb(107, 103, 103);margin-top: 100px">LISTE VIDE / EMPTY</h1>
        {% endif %}
    </div>
{% endblock %}
